{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@goblinhunt/cosmes/dist",
      "./types"
    ],
    "paths": {
      "@goblinhunt/cosmes/*": ["./node_modules/@goblinhunt/cosmes/dist/*"],
      "typeutils": ["./types/typeutils"]
    }
  },
  "include": ["src", "src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
